@model Squawkings.Models.LogonInputModel
@{
	ViewBag.Title = "Logon";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="navbar">
	<div class="navbar-inner header">
	</div>
</div>
<div class="logon-dialog">
@using (Html.BeginForm())
 {
		@Html.ValidationSummary(true)
		<div class="editor-field">
			<input class="input-large" id="Username" name="Username" type="text" value="" placeholder="username" />
			@Html.ValidationMessageFor(model => model.Username)
		</div>
		<div class="editor-field">
			<input class="input-large" id="Password" name="Password" type="text" value="" placeholder="password" />
			@Html.ValidationMessageFor(model => model.Password)
		</div>
		<div>
			<label>
				<input type="checkbox" />
				Remember me</label>
		</div>
		<p>
			<input class="btn btn-primary" type="submit" value="Log in" />
		</p>
 }
</div>
