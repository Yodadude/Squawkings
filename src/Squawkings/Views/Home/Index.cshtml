@model IEnumerable<Squawkings.Controllers.HomeController.SquawkDisplay>

@{
    ViewBag.Title = "Global Squawkings";
}

<div class="main-container">

<div class="squawk-title">@ViewBag.Title</div>
<div class="squawk-subtitle">See everything happening right now</div>

@foreach (var item in Model) {

    <div class="squawk-container">
        <div class="squawk-name">
            @Html.DisplayFor(modelItem => item.Username)
        </div>
        <div class="squawk-text">
            @Html.DisplayFor(modelItem => item.Content)
        </div>
        <div class="squawk-time">
            @Html.DisplayFor(modelItem => item.Time)
        </div>
    </div>
}

</div>
